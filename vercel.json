{
  "version": 2,
  "builds": [
    { 
      "src": "backend/**/*.py", 
      "use": "@vercel/python" 
    },
    {
      "src": "backend/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/static/(.*)", 
      "dest": "/backend/static/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/backend/app.py" 
    }
  ]
}